{
  "extends": "@stellar/tsconfig",
  "compilerOptions": {
    "baseUrl": "src/",
    "declaration": true,
    "declarationDir": "build/",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "amd",
    "moduleResolution": "node",
    "outDir": "build",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
